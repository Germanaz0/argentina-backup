# MySQL Dump binary, none will use mysqldump
# MYSQLDUMP_BIN = /usr/bin/mysqldump

# MySQL Host
MYSQL_HOST = localhost

# MySQL User and Password
MYSQL_USER = root
MYSQL_PASSWORD = root

# Databases to backup, "*" for all, or select multiples adding spaces, egg db1 db2
MYSQL_DATABASES = *

# Keep maximum of X backups
BACKUPS_TO_KEEP = 15

# Whether or not to split up each database into its own file.
FILE_PER_DATABASE = false

# Compresss type, gzip for now
COMPRESS_TYPE = gzip

# Extra mysqldump parameters. For example: "--opt --skip-tz-utc"
MYSQLDUMP_EXTRA_PARAMS =

# BACKUP STORAGE, local and s3
BACKUP_STORAGE=local

# Backup directory, if local storage is setted up on Backup Storage
BACKUP_DIRECTORY = /var/tmp/backup

