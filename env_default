# MySQL Dump binary, none will use mysqldump
# MYSQLDUMP_BIN = /usr/bin/mysqldump

# MySQL Host
MYSQL_HOST = localhost

# MySQL User and Password
MYSQL_USER = root
MYSQL_PASSWORD = root

# Databases to backup, "*" for all, or select using comma separated
MYSQL_DATABASES = *

# Keep maximum of X backups
BACKUPS_TO_KEEP = 15

# Backup directory
BACKUP_DIRECTORY = /var/tmp/backup

# Whether or not to split up each database into its own file.
FILE_PER_DATABASE = false